.profile
  height: profile-height
  display: flex
  flex-direction: column
  justify-content: flex-end

  .basic
    display: flex

    .avatar
      width: 92px
      height: 92px
      border-radius: 50%
      border: 4px solid profile-avatar-color
      background: url("https://avatars.githubusercontent.com/u/26000789?v=4")
      background-size: 110% 110%
      background-position: center center

    .info
      margin-left: 16px
      align-self: flex-end

      .name
        font-size: 32px
        font-weight: 400
        color: profile-avatar-color
        margin-bottom: 4px

      .location
        font-size: 16px
        font-weight: 200
        font-style: italic
        color: profile-location-color

.profile-link
  @extend $nav-link
  font-family: font-icon
  font-size: font-size
  width: font-size
  height: font-size
  padding: 12px 8px
  cursor: pointer
  color: link-color

  &:hover
    text-decoration: none

#github-link
  &:before
    content: "\f09b"

#email-link
  &:before
    content: "\f0e0"

#rss-link
  &:before
    content: "\f09e"
